{
  "name": "realtime",
  "version": "0.0.0",
  "description": "Solid Realtime is a library that allows you to connect and manage real-time data from different services like Supabase, Firebase, etc.",
  "main": "./dist/realtime.umd.js",
  "module": "./dist/realtime.es.js",
  "types": "./dist/realtime.es.d.ts",
  "exports": {
    ".": {
      "import": "./dist/realtime.es.js",
      "require": "./dist/realtime.umd.js"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:js && npm run docs:build",
    "build:js": "vite build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.2.4",
    "vite-plugin-solid": "^2.10.2",
    "vitepress": "^1.4.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.5",
    "@types/node": "^22.7.6",
    "solid-js": "^1.9.2"
  }
}