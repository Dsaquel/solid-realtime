{
  "name": "solid-realtime",
  "version": "1.0.0",
  "description": "Solid Realtime is a library that allows you to connect and manage real-time data from different services like Supabase, Firebase, etc.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "install.sh"
  ],
  "scripts": {
    "ts:build": "tsup",
    "ts:dev": "tsup --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build": "npm run js:build && npm run docs:build",
    "postinstall": "bash ./install.sh"
  },
  "keywords": [
    "typescript",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dsaquel/solid-realtime.git"
  },
  "bugs": {
    "url": "git+https://github.com/Dsaquel/solid-realtime.git/issues"
  },
  "homepage": "git+https://github.com/Dsaquel/solid-realtime.git#readme",
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitepress": "^1.4.1"
  },
  "dependencies": {
    "@firebase/firestore": "^4.7.3",
    "@prisma/client": "^5.21.1",
    "@solidjs/router": "^0.15.0",
    "@solidjs/start": "^1.0.9",
    "@supabase/supabase-js": "^2.45.5",
    "@types/node": "^22.7.6",
    "solid-js": "^1.9.2"
  }
}
